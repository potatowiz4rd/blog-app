@model FA.JustBlog.Core.Models.Image

@{
    ViewData["Title"] = "Create Image";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create Image</h1>

@using (Html.BeginForm("Create", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label asp-for="FileName" class="control-label">File Name:</label>
        <input asp-for="FileName" class="form-control" />
        <span asp-validation-for="FileName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PostId" class="control-label">Post:</label>
        @Html.DropDownList("PostId", ViewBag.Posts as SelectList, "Select a post", new { @class = "form-control" })
        <span asp-validation-for="PostId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FilePath" class="control-label">Image File:</label>
        <input type="file" asp-for="FilePath" class="form-control-file" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}